<?xml version="1.0"?>

<PropertyList>

 <path>pilot.ac</path>

 <animation>
  <type>select</type>
  <object-name>Helmet</object-name>
  <object-name>Visor</object-name>
  <object-name>Mask</object-name>
  <object-name>CPT-Pilot-Head</object-name>
  <object-name>Body</object-name>
  <condition>
   <not>
   <equals>
    <property>sim/current-view/view-number</property>
