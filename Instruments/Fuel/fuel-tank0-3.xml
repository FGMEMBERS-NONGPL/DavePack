<?xml version="1.0"?>

<!-- fuel gauge, by Dave Culp -->
<!-- max 3K pounds, shows fuel in tank[0] only -->

<PropertyList>

 <path>fuel-3.ac</path>

 <animation>
  <type>material</type>
  <object-name>face</object-name>
  <object-name>needle</object-name>
   <emission>
     <red>0.6</red>
     <green>0.3</green>
     <blue>0.3</blue>
    <factor-prop>controls/lighting/instruments-norm</factor-prop>
   </emission> 
 </animation>  

  <animation>
  <type>rotate</type>
  <object-name>needle</object-name>
  <property>consumables/fuel/tank[0]/level-lbs</property>
  <interpolation>
    <entry><ind>0</ind><dep>0</dep></entry>
    <entry><ind>3000</ind><dep>180</dep></entry>
  </interpolation>
  <center>
   <x-m>0.02</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>  

 <animation>
  <type>select</type>
  <object-name>RefuelLight</object-name>
  <condition>
    <property>systems/refuel/contact</property>
  </condition>
 </animation>  

 <!-- *** LoD *** -->
 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>5</max-m>
 </animation>

</PropertyList>
