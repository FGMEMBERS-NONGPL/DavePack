<?xml version="1.0"?>

<!-- Station Select Panel (7 stations), by Dave Culp -->

<PropertyList>

 <path>weapons-panel.ac</path>

 <!-- Station 1 switch -->
 <animation>
  <type>select</type>
  <object-name>sw1-on</object-name>
   <condition>
    <equals>
     <property>fdm/jsbsim/systems/armament/station1/selected</property>
     <value>1</value>
    </equals>
   </condition> 
 </animation>  
 <animation>
  <type>select</type>
  <object-name>sw1-off</object-name>
   <condition>
    <equals>
     <property>fdm/jsbsim/systems/armament/station1/selected</property>
     <value>0</value>
    </equals>
   </condition> 
 </animation>  

