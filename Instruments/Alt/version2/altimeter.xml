<?xml version="1.0"?>

<!-- Altimeter, by Dave Culp -->

<PropertyList>

 <path>Altimeter.ac</path>

 <animation>
  <type>material</type>
  <object-name>Altimeter100needle</object-name>
  <object-name>Altimeter1000needle</object-name>
  <object-name>Altimeter10000needle</object-name>
  <object-name>face</object-name>
  <object-name>10</object-name>
  <object-name>1</object-name>
  <object-name>01</object-name>
  <object-name>001</object-name>
   <emission>
     <red>0.6</red>
     <green>0.3</green>
     <blue>0.3</blue>
    <factor-prop>controls/lighting/instruments-norm</factor-prop>
   </emission> 
 </animation>  

 <animation>
  <type>noshadow</type>
  <object-name>click_l</object-name>
  <object-name>click_r</object-name>
  <object-name>10</object-name>
  <object-name>1</object-name>
  <object-name>01</object-name>
  <object-name>001</object-name>
 </animation>

  <!-- Hot Spots -->
  <animation>
   <type>pick</type>
   <object-name>knob</object-name>
   <visible>true</visible>
   <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <interval-sec>0.1</interval-sec>
    <binding>
     <command>property-adjust</command>
     <property>instrumentation/altimeter/setting-inhg</property>
     <step>0.01</step>
     <min>27.4</min>
     <max>31.4</max>
     <wrap>false</wrap>
    </binding>
   </action>
  </animation>

  <animation>
   <type>pick</type>
   <object-name>knob</object-name>
   <visible>true</visible>
   <action>
    <button>1</button>
    <repeatable>true</repeatable>
    <interval-sec>0.1</interval-sec>
    <binding>
     <command>property-adjust</command>
     <property>instrumentation/altimeter/setting-inhg</property>
     <step>-0.01</step>
     <min>27.4</min>
     <max>31.4</max>
     <wrap>false</wrap>
    </binding>
   </action>
  </animation>

