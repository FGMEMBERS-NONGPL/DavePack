  <!-- Altitude Needles -->
  <animation>
  <type>rotate</type>
  <object-name>Altimeter100needle</object-name>
  <property>instrumentation/altimeter/indicated-altitude-ft</property>
  <factor>0.36</factor>
  <center>
   <x-m>-0.02</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>  

  <animation>
  <type>rotate</type>
  <object-name>Altimeter1000needle</object-name>
  <property>instrumentation/altimeter/indicated-altitude-ft</property>
  <factor>0.036</factor>
  <center>
   <x-m>-0.19</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>  

  <animation>
  <type>rotate</type>
  <object-name>Altimeter10000needle</object-name>
  <property>instrumentation/altimeter/indicated-altitude-ft</property>
  <factor>0.0036</factor>
  <center>
   <x-m>-0.185</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>  

 <!--  InHg Digits -->
  <animation>
   <type>textranslate</type>
   <object-name>10</object-name>
   <property>instrumentation/altimeter/setting-inhg</property>
   <factor>0.01</factor>
   <step>10</step>
   <bias>0.001</bias>
   <axis>
    <x>0</x>
    <y>1</y>
    <z>0</z>
   </axis>
  </animation>

  <animation>
   <type>textranslate</type>
   <object-name>1</object-name>
   <property>instrumentation/altimeter/setting-inhg</property>
   <factor>0.1</factor>
   <step>1</step>
   <bias>0.001</bias>
   <axis>
    <x>0</x>
    <y>1</y>
    <z>0</z>
   </axis>
  </animation>

  <animation>
   <type>textranslate</type>
   <object-name>01</object-name>
   <property>instrumentation/altimeter/setting-inhg</property>
   <factor>1</factor>
   <step>0.1</step>
   <bias>0.001</bias>
   <axis>
    <x>0</x>
    <y>1</y>
    <z>0</z>
   </axis>
  </animation>

  <animation>
   <type>textranslate</type>
   <object-name>001</object-name>
   <property>instrumentation/altimeter/setting-inhg</property>
   <factor>10</factor>
   <axis>
    <x>0</x>
    <y>1</y>
    <z>0</z>
   </axis>
  </animation>

 <!-- *** LoD *** -->
 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>5</max-m>
 </animation>

</PropertyList>
