<?xml version="1.0"?>

<!-- panel light intensity control, by Dave Culp -->

<PropertyList>

 <path>lights.ac</path>

<animation>
  <type>pick</type>
  <object-name>face-left</object-name>
  <action>
    <button>0</button>
    <binding>
      <command>property-adjust</command>
      <property>controls/lighting/instruments-norm</property>
      <step>-0.1</step>
      <min>0</min>
      <max>1</max>
      <wrap>0</wrap>
     </binding>
   </action>
</animation>

<animation>
  <type>pick</type>
  <object-name>face-right</object-name>
  <action>
    <button>0</button>
    <binding>
      <command>property-adjust</command>
      <property>controls/lighting/instruments-norm</property>
      <step>0.1</step>
      <min>0</min>
      <max>1</max>
      <wrap>0</wrap>
     </binding>
   </action>
</animation>


 <animation>
  <type>material</type>
  <object-name>face-left</object-name>
  <object-name>face-right</object-name>
  <object-name>pointer</object-name>
   <emission>
     <red>0.6</red>
     <green>0.3</green>
     <blue>0.3</blue>
    <factor-prop>controls/lighting/instruments-norm</factor-prop>
   </emission> 
 </animation> 

 <animation>
  <type>rotate</type>
  <object-name>pointer</object-name>
  <property>controls/lighting/instruments-norm</property>
  <factor>180</factor>
  <center>
   <x-m>-0.0193</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation> 

 <animation>
  <type>rotate</type>
  <object-name>knob</object-name>
  <property>controls/lighting/instruments-norm</property>
  <factor>180</factor>
  <center>
   <x-m>-0.0193</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation> 

 <animation>
  <type>rotate</type>
  <object-name>bar</object-name>
  <property>controls/lighting/instruments-norm</property>
  <factor>180</factor>
  <center>
   <x-m>-0.024</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation> 

 <!-- *** LoD *** -->
 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>5</max-m>
 </animation>

</PropertyList>
